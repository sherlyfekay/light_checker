<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rl1"
    tools:context="com.example.sherly.lightchecker.Information">

    <ImageView
        android:id="@+id/imageinformation"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/normal"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"/>

    <TextView
        android:id="@+id/statuscahaya"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/imageinformation"
        android:layout_marginTop="20dp"
        android:text="CAHAYA KURANG"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/statuscahaya"
        android:layout_marginTop="10dp"
        android:text="The light is too bright"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/currentlight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tvInfo"
        android:layout_marginTop="20dp"
        android:text="Current Light : "
        android:textSize="18sp" />

    <TextView
        android:id="@+id/requiredlight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/currentlight"
        android:layout_marginTop="15dp"
        android:text="Required Light : "
        android:textSize="18sp" />

</RelativeLayout>